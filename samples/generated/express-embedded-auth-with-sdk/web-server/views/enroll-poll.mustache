<!DOCTYPE html>
<html>
  <head>
    {{>head}}
    {{#pollForResult.refresh}}
    <script type="text/javascript">
      setInterval(function () {
        const pollingForm = document.getElementById('enroll-poll-form');
        if (pollingForm) {
          pollingForm.submit();
        }
      }, {{pollForResult.refresh}});
    </script>
    {{/pollForResult.refresh}}
  </head>
  <body id="samples">
  
    {{>menu}}

    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div id="page-title-header" class="ui header">
          <h2>{{title}}</h2>
        </div>
      </div>

      <div class="row">
        {{>formMessages}}
      </div>

      {{#contextualData}}
        <div class="ui segments">
          <div class="ui segment">
            {{#contextualData.qrcode}}
              <div class="ui fluid image">
                <img id="authenticator-qr-code" src="{{contextualData.qrcode.href}}" />
              </div>
            {{/contextualData.qrcode}}
          </div>
        </div>
        
      {{/contextualData}}
      <div class="row">
        <form id="enroll-poll-form" class="ui large form" action="{{action}}" method="POST">
        </form>
      </div>
      {{>cancel}}
    </div>
  </body>
</html>
