<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    <div id="sign-in" class="ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>Sign In</h2>
        </div>
      </div>

      <div class="row">
        {{>errors}}
      </div>

      <div class="row">
        <form class="ui large form" action="/login" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Username
              </div>
              <input type="text" name="username" />
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Password
              </div>
              <input type="password" name="password" />
            </div>
          </div>
          <button class="ui fluid large primary submit button" type="submit">
            Sign In
          </button>
        </form>
      </div>

      <div class="ui row grid">
        <div class="ui messages row">
          Don't have an account? &nbsp; <a href="/signup">Sign Up</a>
        </div>
        <div class="ui messages row">
          Forgot password? &nbsp; <a href="/recover-password">Recover password</a>
        </div>
      </div>

    </div>
  </body>
</html>
