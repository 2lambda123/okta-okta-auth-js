<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>Select authenticator</h2>
        </div>
      </div>

      <div class="row">
        {{>errors}}
      </div>

      <div class="row">
        <form class="ui large form" action="{{action}}" method="POST">
          <div class="field">
            <select class="ui selection dropdown" name="authenticator">
              {{#authenticators}}
                <option value="{{value}}">{{label}}</option>
              {{/authenticators}}
            </select>
          </div>
          <button class="ui fluid large primary submit button" type="submit">
            Select
          </button>
        </form>
      </div>

      {{>cancel}}

    </div>
  </body>
</html>
