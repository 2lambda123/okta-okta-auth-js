<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    <div id="registration" class="ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>{{title}}</h2>
        </div>
      </div>

      <div class="row">
        {{>errors}}
      </div>

      <div class="row">
        <form class="ui large form" action="{{action}}" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Enter password
              </div>
              <input id="new-password" type="password" name="password" />
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Re-enter password
              </div>
              <input id="confirm-password" type="password" name="confirmPassword" />
            </div>
          </div>
          <button id="password-submit-button" class="ui fluid large primary submit button" type="submit">
            Next
          </button>
        </form>
      </div>

      {{>cancel}}
      
    </div>
  </body>
</html>
