<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>Recover password</h2>
        </div>
      </div>

      <div class="row">
        {{>errors}}
      </div>

      <div class="row">
        <form class="ui large form" action="/recover-password" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Username or Email
              </div>
              <input type="text" name="identifier" required />
            </div>
          </div>
          <button class="ui fluid large primary submit button" type="submit">
            Next
          </button>
        </form>
      </div>

      <div class="ui row grid">
        <div class="ui messages row">
          <a href="/login">Back to Sign In</a>
        </div>
      </div>

    </div>
  </body>
</html>
