<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">

    {{>menu}}

    <div class="okta-sign-in-form ui center aligned relaxed grid">

      <div class="row">
        <div class="ui header">
          <h2>Login with Username and Password</h2>
        </div>
      </div>

      <div class="row">
        {{>formMessages}}
      </div>

      <div class="row">
        <form id="login-form" class="ui large form" action="{{action}}" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Username
              </div>
              <input id="username" type="text" name="username" required />
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Password
              </div>
              <input id="password" type="password" name="password" required />
            </div>
          </div>
          <button id="submit-login-form" class="ui fluid large primary submit button" type="submit">
            LOGIN
          </button>
        </form>
      </div>

      <div class="ui row grid">
        {{#hasIdps}}
          <div class="ui row">
            {{#idps}}
              <button onclick="location.href='{{href}}'" class="ui {{class}} button">
                {{name}}
              </button>
            {{/idps}}
          </div>
        {{/hasIdps}}

        <div class="ui messages row">
          <a href="/recover-password">Forgot your password?</a>
        </div>

        <div class="ui messages row">
          <a href="/register">Sign Up</a>
        </div>
      </div>

    </div>
  </body>
</html>
