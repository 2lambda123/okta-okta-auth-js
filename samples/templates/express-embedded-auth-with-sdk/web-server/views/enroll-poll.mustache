<!DOCTYPE html>
<html>
  <head>
    {{>head}}
    <script src="/assets/js/poll.js"></script>
  </head>
  <body id="samples">
  
    {{>menu}}

    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div id="page-title-header" class="ui header">
          <h2>{{title}}</h2>
        </div>
      </div>
      {{>errors}}

      <div class="row">
        {{>formMessages}}
      </div>

      {{#contextualData.qrcode}}
        <div class="ui segments">
          <div class="ui segment">
              <div class="ui fluid image">
                <img id="authenticator-qr-code" src="{{contextualData.qrcode.href}}" />
              </div>
          </div>
        </div>
      {{/contextualData.qrcode}}
      {{#contextualData.phoneNumber}}
        <div class="ui positive message">
        SMS with setup link sent to {{{contextualData.phoneNumber}}}
        </div>
      {{/contextualData.phoneNumber}}
      {{#contextualData.email}}
        <div class="ui positive message">
        Setup link sent to {{{contextualData.email}}}
        </div>
      {{/contextualData.email}}
      <div class="row">
      {{#nextSteps}}
        <form id="{{remediationName}}-form" action="{{nextStepAction}}" method="POST">
          <input type="hidden" name="nextStep" value="{{remediationName}}"/>
          <button id="submit-button" class="ui fluid primary submit button" type="submit">{{actionDisplayName}}</button>
        </form>
      {{/nextSteps}}
      </div>
      <div class="row">
      {{>cancel}}
      </div>
    </div>
    {{#poll.required}}
      <script type="text/javascript">
        poll('{{{action}}}', {{poll.refresh}});
      </script>
    {{/poll.required}}
  </body>
</html>
